<%= form_with(model:[@user,review], local: true) do |form| %>
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="shadow-sm p-3 mb-3 bg-light border-top-reviews">
        <% if review.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>

            <ul>
            <% review.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <p class="text-primary">Rate</p>
        <hr>
        <div class="form-group">
          <div id="star-rating"></div>
        </div>

        <div class="form-group">
          <%= form.text_area :comment, class: 'form-control', placeholder:"write comment", required: :required %>
        </div>

        <div class="form-group">

          <%= form.button(type: "submit", class: "btn btn-primary" , data: {disable_with:"<i class='fa fa-spinner fa-spin'></i> Writing..." .html_safe }) do %>
             <i class="far fa-edit"></i> WRITE REVIEW
          <% end %>
          <% if review.persisted? %>
            <%= link_to "Cancel", user_path(@user), class: "btn btn-link" %>
          <% else %>
            <%= link_to "Cancel", user_path(@user), class: "btn btn-link" %>
          <% end %>
        </div>
      <% end %>
        </div>
      </div>


<script>
  $('#star-rating').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });
</script>
