
<div class="container-fluid">
  <div class="shadow-sm p-3 bg-light border-top-reviews">
      <div class="row">
        <div class="col-md-8 text-muted">
          <h4><i class="far fa-list-alt"></i> ALL referrals</h4>
        </div>
        <div class="col-md-4 ">
              <%= link_to new_referral_path, class: 'btn btn-primary btn-sm float-right' do %>
                <i class="fas fa-plus-square"></i> Add New referral
              <% end %>
        </div>
      </div>
  </div>

<%if current_user.referrals.exists?%>
<div class="shadow-sm p-3 mb-5 bg-white rounded">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Institution Name </th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @referrals.each do |referral| %>
                <%= content_tag :tr, id: dom_id(referral), class: dom_class(referral) do %>
                <% if current_user && referral.user == current_user %>
                <tr class="active">
                  <td width="100%"">
                    <%= link_to referral do %><i class="far fa-building"></i> <%= referral.institution %> <br>

                  </td>
                   <%end%>

                  <td><span class="badge bg-danger"><%= link_to referral, method: :delete, data: { confirm: 'Are you sure?' } do %>
                       <i class="fas fa-trash-alt text-light" data-toggle="tooltip" title="Destroy"></i></span>
                      <%end%>
                    </td>
                    <% end %>
                <% end %>
              <% end %>
              <tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<%else%>

<div class="container-fluid">
  <div class="row">
  <div class="col-lg-12 col-md-6 jumbotron text-center text-primary border-top-reviews"">
    <h1 ><span class="badge bg-primary text-light"><i class="far fa-file"></i> </span></h1>
    Nothing in referrals
  </div>
  </div>
</div>
<%end%>
