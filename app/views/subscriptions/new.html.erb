<div class="container mt-5">
  <div class="row">
    <div class="col-lg-6 col-md-6 ml-auto mr-auto ">
      <div class="card profile-card-2  ">
        <div class="card-header bg-dark border-top-reviews">
          <div class="card-title lead text-light"><h3 class="text-center">Subscribe</h3></div>
        </div>
        <div class="card-body pt-5 text-muted">
          <p>Chosen plan: <strong><%= params[:plan].capitalize %>
            <hr/>
            <%= form_tag subscriptions_path, id: "payment-form" do |form| %>

            <div class="field">
              <label for="card-element" class="label">Enter credit or debit card</label>

              <div id="card-element" class="form-control">
                <!-- A Stripe element will be intserted here !-->
              </div>

              <div id="card-errors" role="alert"></div>

              <%= hidden_field_tag :plan_id, params[:plan_id] %>

              <button class="btn btn-block btn-primary text-uppercase mt-3">Submit</button>
             </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
