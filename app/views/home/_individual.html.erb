  <div class="row">
      <div class="col-lg-8">
        <div class="jumbotron jumbotron-fluid bg-primary text-light">
          <div class="container">
        <% if current_user.cvs.empty? %>
          <h3 class="display-4">Hi, <%=current_user.name%></h3>
          <p class="lead">You haven't created a cv yet!</p>
          <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 40%"></div>
               <%=link_to new_cv_path , class:'btn btn-warning' do %>
               ðŸš€ GET STARTED
               <%end%>
             <%else%>
            <h3 class="display-4">Hi, <%=current_user.name%></h3>
            <p class="lead">Welcome to @work job placement</p>
            <span class="badge bg-warning"><i class="fas fa-user-lock"></i> #Work00<%=current_user.id%></span>
