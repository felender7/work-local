        </div>
      </div>
      <hr>
      <div class="col-lg-4">
        <%=render'home/templates/announcement'%>
      </div>
</div>
  <hr>

<div class="row">
  <div class="col-lg-12">
    <div class="shadow-sm p-3 mb-5 bg-light">
      <%if current_user.cvs.exists? %>
      <h4 class="text-muted">Companies that are hiring</h4>
      <hr>
           <%=render'home/templates/open_companies'%>
        <%else%>
           <p>Hi,complete your resume to see companies that are hiring</p>
        <%end%>
    </div>
  </div>
</div>
