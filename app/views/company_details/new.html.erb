
<div class="container-fluid">
  <div class="shadow-sm p-3 mb-5 bg-light text-muted ">
     <h4><i class="far fa-building"></i> ADD COMPANY DETAILS</h4>
   </div>
</div>

<% if current_user.company_details.count >= 1 %> 
<div class="container-fluid">
  <div class="col-lg-12">
  <div class="row">
  <div class="col-lg-12 col-md-6 jumbotron text-center text-danger">
    <h4 ><i class="fas fa-exclamation-circle"></i> <br>Hi <%=current_user.name%>, you have added company details already. <br>Please update company details
      </h4>
  </div>
  </div>
</div>
</div>

<% else %>
<%= render 'form', company_detail: @company_detail %>
<%end%>
