
<div class="container-fluid mt-5">
  <div class="shadow-sm p-3 bg-dark text-light border-top-reviews">
      <div class="row">
        <div class="col-md-12">
          <h4> COMPANY PROFILE</h4>
            <%= @company_detail.company_name.upcase %> - <%= @company_detail.registration %><br>
            <small class="badge bg-light text-primary"><%= @company_detail.industry.upcase %></small>
            <a href="/" class="float-right to-top text-light"> <i class="fa fa-window-close" data-toggle="tooltip" title="Close"> </i></a>
        </div>
      </div>
  </div>
 <div class="shadow-sm p-3 bg-light text-light border-top-reviews ">
   <h5 class="card-title text-primary"><i class="far fa-user-circle"></i> About us</h5>
   <p class="card-text text-muted text-justify"><%= @company_detail.description.capitalize %></p>
</div>
</div>
<!-- more deatils bout the comapany -->

<div class="container-fluid mt-5">
  <div class="row">
    <div class="col-lg-8">
      <div class="card border-top-reviews shadow-sm">
        <div class="card-header text-primary">
          Contacts
        </div>
        <div class="card-body text-muted">
          <p class="card-text"><i class="fas fa-envelope-square"></i> <%= @company_detail.email.downcase %></p>
          <p class="card-text"><i class="fas fa-phone-square"> </i>  <%= @company_detail.tel %></p>
        </div>
      </div>
      <!-- contact details end-->

      <div class="card shadow-sm mt-3">
        <div class="card-header text-primary">
          Location
        </div>
        <div class="card-body text-muted">

        </div>
      </div>

      <!-- location details end-->
    </div>

    <div class="col-lg-4">
       <span class="text-muted">Most Recent Jobs</span> <span class="badge bg-danger text-light"> <%=@jobs_count_profile%> </span>
        <small class="float-right"> <%=link_to'show all jobs',"#"%></small>
      <hr>
      <div class="row">
      <div class="container">
        <%@jobs.each do |job|%>
        <div class="my-3 p-3 bg-white text-center rounded shadow-sm border-top-reviews">
          <% if job.company_detail.company_logo.attached? %>
          <%= image_tag  job.company_detail.company_logo.variant(resize:"150x150"), height: 85, width: 85, class:"bd-placeholder-img mr-2 rounded img-border " %>
          <%else%>
          <svg class="bd-placeholder-img mr-2 rounded" width="85" height="85" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: 32x32"><title>Placeholder</title><rect fill="#007bff" width="100%" height="100%"/><text fill="#fff" dy=".3em" x="40%" y="50%"><%= job.company_detail.company_name[0..1].upcase %></text></svg>
          <%end%>
          <!--company logo end-->

          <h5 class="mt-3"><%=link_to job.title.titlecase, job%> </h5>
          <p class="text-muted">@<%=job.company_detail.company_name%></p>
          <span class="badge bg-primary text-light"><i class="fas fa-calendar-alt"></i> <%=time_ago_in_words(job.created_at) +" ago" %></span>
          <span class="badge bg-primary text-light"><i class="fas fa-map-marker-alt"></i> <%=job.city %></span>
        </div>
        <%end%><!--end loop-->
      </div> <!--end container-->
     </div>

    </div>
  </div>
</div>

<!-- more deatils bout the comapany end -->
