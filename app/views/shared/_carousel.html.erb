<div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
          <li data-target="#myCarousel" data-slide-to="1"></li>
          <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <div class="carousel-inner">
          <div class="carousel-item active">
            <%=image_tag('slide_1.jpg', class:'first-slide')%>
            <div class="container">
              <div class="carousel-caption">
                <h1>Job placement should not be painful or costly</h1>
                <p>“Changing mindsets – Improving Lives”</p>
                <p><a class="btn btn-lg btn-primary" href="/about/job_placement" role="button">Learn more</a></p>
              </div>
            </div>
          </div>
          <div class="carousel-item">
              <%=image_tag('slide_2.jpg', class:'second-slide')%>
            <div class="container">
              <div class="carousel-caption">
                <h1>Register online to obtain unique tap number </h1>
                <p> unique number is allocated to all qualificatons.</p>
                <p><a class="btn btn-lg btn-primary" href="/about/register_online" role="button">Learn more</a></p>
              </div>
            </div>
          </div>
          <div class="carousel-item">
            <%=image_tag('slide_3.jpg', class:'third-slide')%>

            <div class="container">
              <div class="carousel-caption">
                <h1>Job placement</h1>
                <p>TAP search for suitable candidates that match for the job </p>
                <p><a class="btn btn-lg btn-primary" href="/about/job_placement" role="button">Learn more</a></p>
              </div>
            </div>
          </div>
        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
</div>


<script type="text/javascript">
$('.carousel').carousel({
  interval: 3000
})
</script>
