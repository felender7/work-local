<div class="search mt-5">
  <div class="container text-center">
    <div class="row justify-content-center">
      <div class="col-xl-7 col-lg-8">
        <h3 class="mb-0">Find Jobs on @work</h3>
        <p class="text-white-50">
          <%=Job.count%> Jobs in South Africa</p>
        <div id="mc_embed_signup">
          <%= form_tag(find_jobs_path, method: :get, class: "form-inline", role: 'search') do %>
              <div class="input-group container">
                 <%= text_field_tag :term_job, params[:term_job], id: 'job_search', autocomplete: :off, placeholder: 'Search...', class: 'form-control' %>
                     <div class="input-group-append">
                    <%= submit_tag 'Search', name: nil, class: "btn btn-light" %>
                  </div>
                </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
