<div class="jumbotron jumbotron-fluid bg-primary text-light text-center ">
    <h3>Find Service Provider on @work</h3>
      <p><%=@service_provider_count%> Service Provider in South Africa</p>
        <div class="row">
          <div class="container">
          <div class="col-lg-6 col-sm-4 ml-auto mr-auto">
          <%= form_tag(users_path, method: :get, class: "form-inline", role: 'search' , width:500) do %>
              <div class="input-group container">
                 <%= text_field_tag :term_user, params[:term_user], id: 'user_search', autocomplete: :off, placeholder: 'Search...', class: 'form-control typeahead' %>
                     <div class="input-group-btn search-panel">
                    <%= submit_tag 'Search', name: nil, class: "btn btn-default" %>
                  </div>
                </div>
            <% end %>
          </div><!--col end-->
        </div><!--container end-->
      </div><!--row end-->
</div>
