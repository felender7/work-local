<div class="container-fluid">
  <div class="shadow-sm p-3 mb-3 bg-light">
      <div class="row">
        <div class="col-md-8 text-muted">
          <h4><i class="far fa-list-alt"></i> CV SUMMARY</h4>
        </div>
        <div class="col-md-4">
          <a href="/" class="float-right text-danger"> <i class="fa fa-window-close" data-toggle="tooltip" title="Close"> </i></a>
        </div>
      </div>
  </div>
<div class="shadow-sm p-3 mb-3 bg-white border-top-reviews">
<div class="row">
  <div class="col-lg-2">
    <% if @cv.avatar.attached? %>
       <%= image_tag(@cv.avatar, height: 150, width: 150, class:"rounded margin-bottom-20 img-thumbnail") if @cv.avatar %>
    <%else%>
    <%= image_tag ("placeholder_avatar.png"), height: 150, width: 150, class: "rounded margin-bottom-20" %>
    <%end%>

  </div>
  <div class="col-lg-6">
    <div class="table-responsive-sm">
        <table class="table table-sm">
          <tbody>
            <tr class="d-flex"></tr>
         </tbody>
      <%if current_user && @cv.user == current_user%>
            <tr>
              <td><strong>Full Name:</strong></td>
              <td><%=current_user.name.titlecase%></td>
            </tr>
            <tr>
              <td><strong>Email:</strong></td>
              <td><%=current_user.email%></td>
            </tr>

            <tr>
              <td><strong>Phone:</strong></td>
              <td>+27<%=@cv.phone%></td>
            </tr>

            <tr>
              <td><strong>ID/Passport:</strong></td>
              <td>  <%= @cv.id_passport%> <br>
                <%if @cv.identification_type == "ID" %>
                  <small class="badge bg-primary text-light"><i class="fas fa-user"></i> ID|South African Citizen
                  </small>
                  <%else%>
                  <small class="badge bg-primary text-light"><i class="fas fa-user"></i> Passport|Non South African Citizen

                  </small>

                  <%end%>
              </td>
            </tr>
            <tr>
              <td><strong>Tap Number:</strong></td>
              <td><span class="badge bg-primary text-light"><i class="fas fa-user-lock"></i> #TAP00<%=current_user.id%></span></td>
            </tr>

            <tr>
              <td><strong>Date of Birth:</strong></td>
              <td><%= @cv.date_of_birth %></td>
            </tr>

             <tr>
               <td><strong>Gender:</strong></td>
               <td><%= @cv.gender %></td>
             </tr>

             <tr>
               <td><strong>Ethnicity:</strong></td>
               <td><%= @cv.ethnicity %></td>
             </tr>

             <tr>
               <td><strong>Place of Birth:</strong></td>
               <td><%= @cv.place_of_birth %></td>
             </tr>

             <tr>
               <td><strong>Disability:</strong></td>
               <td><%= @cv.disability %></td>
             </tr>

             <tr>
               <td><strong>Job Function:</strong></td>
               <td><%= @cv.job_function %></td>
             </tr>

             <tr>
               <td><strong>Job Industry:</strong></td>
               <td><%= @cv.job_industry %></td>
             </tr>

             <tr>
               <td><strong>Availability:</strong></td>
               <td><%= @cv.availability %></td>
             </tr>

             <tr>
               <td><strong>Salary Range:</strong></td>
               <td><%= @cv.salary_range %></td>
             </tr>

             <tr>
               <td><strong>Education:</strong></td>
               <td><%= @cv.education_type %></td>
             </tr>
             <tr>
               <td><strong>Verified:</strong></td>
               <td><%if current_user.varification == true %>
                <span class="badge bg-success text-light"><i class="fas fa-check-double"></i> verified</span>
                <%else%>
                <span class="badge bg-danger text-light"><i class="fas fa-times-circle"></i></i> Not verified </span>
                 <%end%>
               </td>
             </tr>
             <tr>
               <td><strong>Facebook:</strong></td>
               <td><%= @cv.facebook %></td>
             </tr>
             <tr>
               <td><strong>Twitter:</strong></td>
               <td><%= @cv.twitter %></td>
             </tr>

             <tr>
               <td><strong>LinkedIn:</strong></td>
               <td><%= @cv.linked_in %></td>
             </tr>

          <%end%>
        </table>

    </div>
  </div>

  <div class="col-lg-4">
    <%=render'shared/tracking'%>
  </div>
</div>
    <hr>
    <%if current_user == current_user%>
    <%= link_to edit_cv_path(@cv), class:"btn btn-primary btn-sm" do %>
       EDIT <i class="fas fa-edit"></i>
    <%end%>
    <%if current_user.cvs.empty?%>
       |<%=button_to new_referral_path, class:'btn btn-secondary btn-sm', :disabled => true do %>
      ADD REFERANCE
    <%end%>
  <%else%>
  | <%=link_to new_referral_path, class:'btn btn-primary btn-sm ', disabled: false do %>
  ADD REFERANCE
  <%end%>
<%end%>
  </div>
  <%end%>
</div>
