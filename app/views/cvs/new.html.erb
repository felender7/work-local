
<div class="container-fluid">
  <div class="shadow-sm p-3 mb-3 bg-light text-muted ">
     <h4><i class="far fa-file"></i> CREATE CV</h4>
   </div>
</div>

<% if @cv_count >= 1 %>
<div class="container-fluid">
  <div class="col-lg-12">
  <div class="row">
  <div class="col-lg-12 col-md-6 jumbotron text-center text-danger">
    <h4 ><i class="fas fa-exclamation-circle"></i> <br>Hi <%=current_user.name%>, you have created your cv already. <br>Please update your cv
      </h4>
  </div>
  </div>
</div>
</div>

<% else %>
<%= render 'form', cv: @cv %>
<% end %>
