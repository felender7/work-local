<div class="container-fluid">
  <div class="shadow-sm p-3 bg-light border-top-reviews">
      <div class="row">
        <div class="col-md-8 text-muted">
          <h4><i class="far fa-list-alt"></i> ALL DOCUMENTS</h4>
        </div>
        <div class="col-md-4 ">
              <%= link_to new_document_path, class: 'btn btn-primary btn-sm float-right' do %>
                <i class="fas fa-plus-square"></i> Add New Document
              <% end %>
        </div>
      </div>
  </div>

<%if current_user.documents.exists?%>
<div class="shadow-sm p-3 mb-5 bg-white rounded">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>File Name</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @documents.each do |document| %>
                <%= content_tag :tr, id: dom_id(document), class: dom_class(document) do %>
                <% if current_user && document.user == current_user %>
                <tr class="active">
                  <td width="90%">
                    <%= link_to document do %><i class="far fa-file-pdf text-danger"></i> <%= document.title %> <br>
                    <small class="text-muted"><%=(document.file.byte_size) / 1000.0%> bytes</small>
                  </td>
                   <%end%>

                  <td><span class="badge bg-primary " ><%= link_to document.file, download:'' do %>
                    <i class="fas fa-file-download text-light" data-toggle="tooltip" title="Download" ></i></span>
                    <%end%> |
                    <span class="badge bg-danger"><%= link_to document, method: :delete, data: { confirm: 'Are you sure?' } do %>
                       <i class="fas fa-trash-alt text-light" data-toggle="tooltip" title="Destroy"></i></span>
                      <%end%>
                    </td>
                    <% end %>
                <% end %>
              <% end %>
              <tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<%else%>

<div class="container-fluid">
  <div class="row">
  <div class="col-lg-12 col-md-6 jumbotron text-center text-primary border-top-reviews"">
    <h1 ><span class="badge bg-primary text-light"><i class="far fa-folder-open"></i> </span></h1>
    Nothing in Documents
  </div>
  </div>
</div>


<%end%>
